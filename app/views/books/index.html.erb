<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <tb><%= book.title %></tb>
        <tb><%= book.body %></tb>
        <tb><%= link_to "Show", book_path(book.id) %></tb>
        <tb><%= link_to "Edit", edit_book_path(@book.id) %></tb>
        <tb><%= link_to "Destroy", book_path(@book.id), method: :delete, "date-congirm" => "本当に削除しますか？" %></tb>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生しました
<ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<% form_with model: @book, url: '/books', method: :post do |f| %>

 <label>title</label>
  <%= f.text_field :title %>
 
 <label>body</label>
  <%= f.text_area :body %>
 
  <%= f.submit 'Create Book' %>
<% end %>